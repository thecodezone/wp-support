{
  "name": "codezone/wp-support",
  "description": "Support utilities for building WordPress plugins.",
  "type": "library",
  "license": "GPL-2.0-only",
  "autoload": {
    "psr-4": {
      "CodeZone\\WPSupport\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "authors": [
    {
      "name": "Craig Wann",
      "email": "craig@codezone.io"
    }
  ],
  "require": {
    "php": "^7.4",
    "league/route": "^5.1",
    "league/container": "4.*",
    "guzzlehttp/psr7": "^2.6",
    "kucrut/vite-for-wp": "^0.8.0",
    "league/plates": "3.5"
  },
  "require-dev": {
    "dealerdirect/phpcodesniffer-composer-installer": "^1.0",
    "php-parallel-lint/php-parallel-lint": "^1.3.1",
    "phpcompatibility/php-compatibility": "^9.0",
    "yoast/phpunit-polyfills": "^1.0",
    "wp-coding-standards/wpcs": "^3.0",
    "brain/monkey": "2.*",
    "phpunit/phpunit": "^9"
  },
  "config": {
    "platform": {
      "php": "7.4.27"
    },
    "platform-check": false,
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true
    }
  }
}
